<!DOCTYPE html>
<html>

 <p id="notice"></p>

 <div class="container px-5 px-sm-0">
 <div class="row">

    <div class="col-md-3">
     <%= render 'users/list', user: @book.user, book: @booknew %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
     <table class="table table-hover table-inverse">
     <td>
         <%= link_to user_path(@book.user.id) do %>
         <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: '/assets/no_image.jpg' %>
         <p><%= @book.user.name %></p>
         <% end %>

     </td>
     <td>
         <%= link_to book_path(@book.id) do %>
         <%= @book.title %>
         <% end %>
     </td>
     <td><%= @book.body %></td>

        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-secondary" "btn btn-success"%></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-secondary" "btn btn-danger" %></td>
        <% end %>
  </span>
   </table>
  </div>
 </div>
</div>