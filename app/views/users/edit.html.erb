<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>


<h2></h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>is too short (minimum is 2 characters)
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: '/assets/no_image.jpg'%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <label for="InputIntroduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction"%>　<%= f.submit "Update User" %>
<% end %>